// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/powershell
{
	"name": "PowerShell",
	"dockerFile": "dockerfile",
	//  Features can be installed by adding the feature name and version to the features object.
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},
	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Set *default* container specific settings.json values on container create.
			"settings": {
				"terminal.integrated.shell.windows": "/bin/pwsh",
				"terminal.integrated.defaultProfile.linux": "pwsh",
				"powershell.powerShellDefaultVersion": "PowerShell"
			},
			
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"ms-vscode.powershell",
				// Justin Grote extension pack
				"justin-grote.powershell-extension-pack"
			]
		}
	},
	// build & load PSSymantecSEPM module
	"postAttachCommand": "/usr/bin/pwsh -NoLogo -NoProfile -ExecutionPolicy Bypass -Command './__For_Dev_And_Maintenance/Build_and_load_module.ps1'"
}